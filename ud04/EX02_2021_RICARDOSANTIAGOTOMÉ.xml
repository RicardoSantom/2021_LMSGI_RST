<!DOCTYPE catalogo [
<!ELEMENT catalogo(portatil*)>
<!ATTLIST catalogo 
    xmlns:xsi CDATA #IMPLIED
    xsi:noNamespaceSchemaLocation CDATA #IMPLIED>
<!ELEMENT portatil(referencia,nombre,fabricante,procesador,ram,disco,pantalla,grafica,fotos)*>

<!ELEMENT referencia (#PCDATA)>
<!ELEMENT nombre (#PCDATA)>
<!ELEMENT fabricante EMPTY>
<!ATTLIST fabricante 
    nombre (LENOVO|HP|MSI|APPLE|ASUS|DELL|DESCONOCIDO) #REQUIRED>
<!ELEMENT procesador (nombre,cache,numero,velocidad)*>
<!ELEMENT nombre (#PCDATA)>
<!ELEMENT cache (#PCDATA)>
<!ATTLIST cache 
    tamanyo (Mb|Gb|Tb) "Gb">
<!ELEMENT numero (#PCDATA)>
<!ELEMENT velocidad (#PCDATA)>
<!ATTLIST velocidad 
    medida #FIXED "Ghz">
<!ELEMENT ram (memoria|tipo)+ #REQUIRED>
<!ELEMENT memoria (#PCDATA)>
<!ATTLIST memoria 
    unidadDeMedida (Mb|Gb|Tb) "Gb"
    tipo (DDR3|DDR4) #REQUIRED>
<!ELEMENT disco (#PCDATA)>
<!ATTLIST disco 
    tipoDisco (SSD|HDD) #REQUIRED
    capacidad (Mb|Gb|Tb) #REQUIRED>
    
    
]>
<catalogo xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
         xsi:noNamespaceSchemaLocation='EX02_2021_RICARDOSANTIAGOTOMÃ‰.xsd'>
    
